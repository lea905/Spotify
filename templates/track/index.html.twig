{% extends 'base.html.twig' %}
{% block body %}

    <div class="row justify-content-center mb-4">
        {{ render(path('app_include_search_form', { redirect: app.request.attributes.get('_route') })) }}
    </div>


    <div class="row">
        {% for track in tracks %}
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <a href="{{ path('app_track_show', {'id': track.getSpotifyId()}) }}" class="text-decoration-none text-dark">
                    <div class="card position-relative overflow-hidden">
                        <img src="{{ track.pictureLink }}" class="card-img-top" alt="{{ track.name }}">
                        <div class="card-body">
                            <h5 class="card-title truncate">{{ track.name }}</h5>
                            <button class="btn btn-danger position-absolute top-0 end-0 m-2 rounded-circle like-btn"
                                    data-id="{{ track.spotifyId }}">
                                <i class="bi bi-suit-heart"></i>
                            </button>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>

    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Info</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-black" id="toastBody">
            </div>
        </div>
    </div>

    <script>
        function showToast(message) {
            const toastEl = document.getElementById('liveToast');
            document.getElementById('toastBody').textContent = message;
            const toast = new bootstrap.Toast(toastEl, { delay: 2000 }); // 2 secondes
            toast.show();
        }

        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const trackId = this.dataset.id;

                fetch('/track/save/' + trackId, {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                    .then(res => res.json())
                    .then(data => showToast(data.message))
                    .catch(err => showToast("Erreur lors de l'enregistrement"));
            });
        });
    </script>

{% endblock %}
